<?xml version="1.0" encoding="utf-8"?>
<!-- Опис панелі кнопок -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/table_window"
    android:layout_width="410dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:layout_gravity="top" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">
                    <LinearLayout
                        android:id="@+id/stroke"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="#000000"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/fill"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="#FFFFFF"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="horizontal" >

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/thickness"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:orientation="horizontal"
                        android:src="@drawable/thick"/>
                    <ImageButton
                        android:id="@+id/filled"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginHorizontal="4dp"
                        android:orientation="horizontal"
                        android:src="@drawable/filled"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="293dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="6dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/brush"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/brush"/>

                    <ImageButton
                        android:id="@+id/line"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/line"/>

                    <ImageButton
                        android:id="@+id/rect"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/rect"/>

                    <ImageButton
                        android:id="@+id/oval"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/oval"/>

                    <ImageButton
                        android:id="@+id/cube"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/cube"/>

                    <ImageButton
                        android:id="@+id/erasor"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/erasor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#000000"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/linear2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#433F3F"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/linear3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#420B07"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/linear4"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#B62015"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/linear5"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#FF5722"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/linear6"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#FFEB3B"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linear7"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#4CAF50"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/linear8"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#0B550E"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/linear9"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#2196F3"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/linear10"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#3F51B5"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/linear11"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#9C27B0"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/linear12"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#FFFFFF"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#6E6D6D">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>